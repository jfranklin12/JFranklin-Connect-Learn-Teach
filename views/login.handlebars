<div class="container">
    <div class="row">
        <form class="col s6" id="login-form">
            <h3 class="teal-text text-darken-3">Login Form</h3>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-username" type="text" class="validate indigo-text text-darken-3">
                    <label for="username" class="teal-text text-darken-3">Username<label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-email" type="email" class="validate indigo-text text-darken-3">
                    <label class="teal-text text-darken-3 teal-text text-darken-3" for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-password" type="password" class="validate indigo-text text-darken-3">
                    <label class="teal-text text-darken-3" for="password">Password</label>
                </div>
            </div>
        <button class="btn waves-effect waves-light indigo darken-2" id="login-submit">Submit
        <i class="material-icons right">send</i>
        </button>
        </form>

        <form class="col s6" id="signup-form">
            <h3 class="teal-text text-darken-3">Sign Up Form</h3>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-username" type="text" class="validate indigo-text text-darken-3">
                    <label class="teal-text text-darken-3" for="username">Username<label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-email" type="email" class="validate indigo-text text-darken-3">
                    <label class="teal-text text-darken-3" for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-password" type="password" class="validate indigo-text text-darken-3">
                    <label class="teal-text text-darken-3" for="password">Password</label>
                </div>
            </div>
        <button class="btn waves-effect waves-light indigo darken-2" id="signup-submit" >Submit
        <i class="material-icons right">send</i>
        </button>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>