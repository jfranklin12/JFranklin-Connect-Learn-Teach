<div class="container">
    <div class="row">
        <form class="col s6" id="login-form">
            <h3>Login Form</h3>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-username" type="text" class="validate">
                    <label for="username">Username<label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-email" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="login-password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
        <button class="btn waves-effect waves-light" id="login-submit">Submit
        <i class="material-icons right">send</i>
        </button>
        </form>

        <form class="col s6" id="signup-form">
            <h3>Sign Up Form</h3>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-username" type="text" class="validate">
                    <label for="username">Username<label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-email" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s8">
                    <input id="signup-password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
        <button class="btn waves-effect waves-light" id="signup-submit">Submit
        <i class="material-icons right">send</i>
        </button>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>