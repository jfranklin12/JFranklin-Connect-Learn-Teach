<div class="container">
<h1 class="blog-title">Write to teach, read to learn, share to connect!</h1>
    {{#each posts as |post|}}
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content white-text">
                    <span class="card-title black">{{post.post_title}}</span>
                    <p class="review-comment black">{{post.post_text}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>