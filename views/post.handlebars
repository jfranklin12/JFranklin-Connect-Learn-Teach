<div class="container">
    {{#each Posts as |post|}}
    <div class="row">
        <div class="col s12">
            <div class="card">
                <div class="card-content white-text">
                    <span class="card-title">{{post.post_title}}</span>
                    <p class="review-comment">{{post.post_text}}</p>
                    <p>Created by {{user.name}} on {{format_date date_created}}</p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>